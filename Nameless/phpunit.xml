<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./Tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="Nameless Test Suite">
            <directory suffix="Test.php">./Tests/Core/Functions</directory>
        </testsuite>
	    <testsuite name="Nameless Validation Test Suite">
            <directory suffix="Test.php">./Tests/Modules/Validation</directory>
        </testsuite>
    </testsuites>
</phpunit>
